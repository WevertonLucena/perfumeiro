<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss} %-5level %logger{36}: %msg%n" />
		</Console>
	</Appenders>
	
	<Loggers>
		<Logger name="br.com.lucenasistemas.perfumeiro.controller" level="error"/>
		<Logger name="br.com.lucenasistemas.perfumeiro" level="debug"/>
		<Logger name="br.org.hibernate.SQL" level="debug"/>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>